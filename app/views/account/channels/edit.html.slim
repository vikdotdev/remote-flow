- breadcrumbs [\
  { home: true, url: account_path },\
  { title: 'Channels', url: account_channels_path },\
  { title: 'Channel', url: account_channel_path(@channel) },\
  { title: 'Edit' }\
]

- content_for :actions do
  = link_to "All Channel",
          account_channels_path,
          class: "btn btn-sm btn-light-primary mr-50"
  = link_to "Delete", account_channel_path(@channel),
          class: "btn btn-sm btn-light-danger",
          method: :delete,
          data: { confirm: 'Are you sure?' }
.card
  .card-content
    .card-header.pb-0
      h4 Edit
    .card-body
      = render 'account/channels/form',
              channel: @channel,
              path: [:account, @channel],
              back_path: [:account, @channel]

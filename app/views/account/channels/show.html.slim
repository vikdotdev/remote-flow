.content-body.mt-2
  .row
    .col-12.d-flex.justify-content-end.align-items-center.px-1.mb-2
      = link_to "All Channels", account_channels_path(@channel), class: "btn btn-sm btn-light-primary mr-50"
      = link_to "Edit", edit_account_channel_path(@channel), class: "btn btn-sm btn-light-primary mr-50"
      = link_to "Delete", account_channel_path(@channel), class: "btn btn-sm btn-light-danger", method: :delete
  .card
    .card-content
      .card-header.pb-0
        h4 Info
      .card-body
        .row
          .col-12.col-md-4
            table.table.table-borderless
              tbody
                tr
                  td Registered:
                  td
                    = @channel.created_at.strftime("%m/%d/%Y")
          .col-12.col-md-8
            .table-responsive
              table.table.mb-0
                tbody
                  tr
                    td Name
                    td
                      = @channel.name
                  tr
                    td Organization
                    td
                      = @channel.organization.name

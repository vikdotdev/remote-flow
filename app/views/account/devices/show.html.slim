.content-body.mt-2
  .row
    .col-7
      = breadcrumbs [\
        { home: true, url: account_path },\
        { title: 'Devices', url: account_devices_path },\
        { title: 'Device' }\
      ]
    .col-5.d-flex.justify-content-end.align-items-center.px-1.mb-2
      = link_to "All Devices", account_devices_path(@device), class: "btn btn-sm btn-light-primary mr-50"
      = link_to "Edit", edit_account_device_path(@device), class: "btn btn-sm btn-light-primary mr-50"
      = link_to "Delete", account_device_path(@device), class: "btn btn-sm btn-light-danger", method: :delete
  .card
    .card-content
      .card-header.pb-0
        h4 Info
      .card-body
        .row
          .col-12.col-md-4
            table.table.table-borderless
              tbody
                tr
                  td Registered:
                  td
                    = @device.created_at.strftime("%m/%d/%Y")
                tr
                  td Status:
                  td
                    = status_badge @device.active
          .col-12.col-md-8
            .table-responsive
              table.table.mb-0
                tbody
                  tr
                    td Name
                    td
                      = @device.name
                  tr
                    td Organization
                    td
                      = @device.organization.name
